{
    "name": "@frog4js/schema",
    "version": "1.0.1",
    "types": "types/index.d.ts",
    "description": "Fast and hook-base web framework, for Node.js schema package",
    "engines": {
        "node": ">= 16.0.0"
    },
    "scripts": {
        "lint:eslint": "eslint --fix --ext .mjs,.ts \"src\" \"test\"",
        "lint:prettier": "prettier --write  --loglevel warn \"src\" \"test\"",
        "lint:lint-staged": "lint-staged",
        "commit": "git -cz",
        "test": "node --test test/all-test.mjs",
        "test:only": "node --test --test-only test/all-test.mjs",
        "test:coverage": "rimraf ./coverage && NODE_V8_COVERAGE=coverage node --experimental-test-coverage test/all-test.mjs",
        "test:suite": "node --test json-schema-test-suite/suite-runner.test.mjs",
        "build": "rimraf ./built && frog build",
        "release": "npm run build && frog release"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:frog4js/core.git"
    },
    "author": "frogjs@126.com1",
    "license": "ISC",
    "devDependencies": {
        "@frog4js/devkit-cli": "^1.0.0",
        "@frog4js/devkit-commitlint": "^1.0.0",
        "@frog4js/devkit-prettier": "^1.0.0",
        "@frog4js/eslint-config": "^1.0.0",
        "ajv": "^8.12.0",
        "ajv-formats": "^2.1.1",
        "ajv-keywords": "^5.1.0",
        "rimraf": "^5.0.5",
        "@cfworker/json-schema": "^1.12.8"
    },
    "commitlint": {
        "extends": [
            "@frog4js/devkit-commitlint"
        ]
    },
    "eslintConfig": {
        "extends": [
            "@frog4js"
        ]
    },
    "prettier": "@frog4js/devkit-prettier",
    "dependencies": {},
    "exports": {
        "./context": {
            "import": "./src/context/index.mjs"
        },
        "./vocabulary-actuator": {
            "import": "./src/vocabulary-actuator/index.mjs"
        },
        "./schema": {
            "import": "./src/schema/index.mjs"
        }
    }
}
